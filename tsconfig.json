{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true /* Enables JSON imports */,
    "sourceMap": true /* Generates corresponding '.map' file */,
    "lib": ["dom", "dom.iterable", "es2023", "esnext"] /* Specify library files to be included in the compilation. */,
    "module": "node16",
    "target": "es2022"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "webpack.config.ts"]
}
