{
  "name": "webpack.config",
  "description": "bootstrap repo for creating react app with use of webpack v5",
  "private": true,
  "license": "MIT",
  "version": "1.0.0-alpha",
  "homepage": ".",
  "proxy": "http://localhost:8282",
  "scripts": {
    "cleanup:smart": "rimraf dist/*.js dist/*.txt",
    "build": "NODE_ENV=production webpack",
    "build:tsc:log": "scripts/build_tsc_with_logs.sh",
    "measure:build": "NODE_ENV=production MEASURE=1 webpack",
    "build:tsc": "NODE_ENV=production tsc --noEmit --listFiles --listEmittedFiles",
    "start": "NODE_ENV=development webpack serve --open",
    "start:production": "NODE_ENV=production webpack serve --open",
    "test": "echo \"Error: no test specified\" && exit 1",
    "verify:tsc:config": "NODE_ENV=production tsc --showConfig",
    "verify:webpack:config": "NODE_ENV=production webpack configtest",
    "start:mocks": "yarn --cwd ./mocks start:dev",
    "dev:sjson": "yarn --cwd ./mocks dev:sjon",
    "dev:mocks": "yarn --cwd ./mocks dev:mocks",
    "postinstall": "patch-package && ( yarn --silent --cwd ./mocks )"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/debug": "^4.1.12",
    "@types/node": "> ^18.18.0 <19.0.0",
    "@types/postcss-flexbugs-fixes": "^5.0.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/sass-loader": "^8.0.8",
    "@types/speed-measure-webpack-plugin": "^1.3.6",
    "@types/webpack-dev-server": "^4.7.2",
    "@vanilla-extract/webpack-plugin": "^2.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "esbuild-loader": "^4.0.2",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.3.0",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "speed-measure-webpack-plugin": "^1.5.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "type-fest": "^4.8.1",
    "typescript": "5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "volta": {
    "node": "18.18.2"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.14.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  }
}
